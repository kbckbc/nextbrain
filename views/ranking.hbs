{{>pageheader pagename="Ranking"}}

<div style="width:75%">

  

  {{#if ranking}}
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Ranking</th>
        <th scope="col">Score</th>
        <th scope="col">Name</th>
        <th scope="col">School</th>
        <th scope="col">Time</th>
      </tr>
    </thead>
    <tbody>
      {{#each ranking}}
      <tr>
        <th scope="row">{{rank}}</th>
        <td>{{score}}</td>
        <td>{{name}}</td>
        <td>{{school}}</td>
        <td>{{date}}</td>
      </tr>
      {{/each}}

    </tbody>
  </table>

  {{else}}
  <div style="text-align:center">
  No one played yet!
  <br>
  Be the first student challenging this game!

  </div>
  {{/if}} 

</div>
