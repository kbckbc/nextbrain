{{>pageheader pagename="Ranking"}}

<div style="width:75%">

  

{{#if ranking}}

{{#if nuguri}}
<table class="table">
  <thead>
    <tr>
      <th scope="col">Ranking</th>
      <th scope="col">Score</th>
      <th scope="col">Stage</th>
      <th scope="col">Time</th>      
      <th scope="col">Name</th>
      <th scope="col">School</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
    {{#each ranking}}
    <tr>
      <th scope="row">{{rank}}</th>
      <td>{{score}}</td>
      <td>{{stage}}</td>
      <td>{{time}}</td>
      <td>{{name}}</td>
      <td>{{school}}</td>
      <td>{{date}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{/if}}

{{#if state}}
<table class="table">
  <thead>
    <tr>
      <th scope="col">Ranking</th>
      <th scope="col">Score</th>
      <th scope="col">Wrong</th>
      <th scope="col">Name</th>
      <th scope="col">School</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
    {{#each ranking}}
    <tr>
      <th scope="row">{{rank}}</th>
      <td>{{score}}</td>
      <td>{{wrong}}</td>
      <td>{{name}}</td>
      <td>{{school}}</td>
      <td>{{date}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{/if}}


{{else}}
<div style="text-align:center">
No one played yet!
<br>
Be the first student challenging this game!

</div>
{{/if}} 

</div>
