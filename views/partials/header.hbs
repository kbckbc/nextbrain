<header>

<!-- For Toast -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
  <div id="liveToast" class="toast text-bg-warning" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-body">
      
      <h4 id="toastText">Toast text here.</h4>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
  </div>
</div>


<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop" id="btnTriggerModal" style="display:none">
  Launch static backdrop modal
</button>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <span id="spanModalText"></span>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" id="btnModalClose" data-bs-dismiss="modal" style="display:none">Close</button>
        <button type="button" class="btn btn-primary" id="btnModalYes">Yes</button>
        <button type="button" class="btn btn-primary" id="btnModalNo">No</button>
      </div>
    </div>
  </div>
</div>


<nav class="navbar navbar-expand-lg bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/"><img src="/nb.png" width="50" height="50"> Next Brain</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <a class="nav-link " href="/about" role="button" >
            About
          </a>

        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Learn
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/math">Math</a></li>
          </ul>
        </li>

        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Games
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/game/nuguri">Squirrel Math</a></li>
            <li><a class="dropdown-item" href="/game/state">State Challenge</a></li>
          </ul>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Ranking
          </a>  
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/ranking/nuguri">Squirrel Math</a></li>
            <li><a class="dropdown-item" href="/ranking/state">State Challenge</a></li>
          </ul>
        </li> 

      </ul>

      <ul class="nav nav-pills">
        {{#if user}}
        <li class="nav-item">
          <button id="headercoin" type="button" class="btn btn-outline-primary btn-lg" disabled>Coin : {{user.coin}}</button>
        </li>
        <li class="nav-item">
          <a class="btn btn-primary btn-lg" href="/auth/mypage" role="button">Hi, {{user.username}}! </a>
        </li>
        <li class="nav-item">
          <a class="btn btn-outline-primary btn-lg" href="/auth/logout" role="button">Log out</a>
        </li>

        {{else}}
        <li class="nav-item">
          <a class="nav-link" href="/auth/login">Log in</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/auth/signup">Sign up</a>
        </li>

        {{/if}}          



      </ul>

    </div>
  </div>
</nav>  

</header>